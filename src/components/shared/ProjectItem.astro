---
import { Image } from 'astro:assets';
import SectionTitle from '@components/shared/SectionTitle.astro';

interface Props {
  src: string;
  title: string;
  description: string;
  class?: string;
}

const { src, title, description, class: className } = Astro.props;
---

<div class:list={['flex flex-col gap-4', className]}>
  <Image
    class:list={['h-64 w-auto object-cover', className]}
    src={src}
    alt={title}
    height={800}
    width={800}
  />
  <SectionTitle class="text-2xl md:text-4xl"> {title} </SectionTitle>
  <p class="text-sm md:text-lg font-light text-neutral-700">
    {description}
  </p>
</div>
