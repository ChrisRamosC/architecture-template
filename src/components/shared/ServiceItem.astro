---
import { Icon } from 'astro-icon/components';
import SectionTitle from '@components/shared/SectionTitle.astro';
import { addIssueToContext } from 'astro:schema';

interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<article class="h-[360x] border p-8 border-primary-100 space-y-4">
  <Icon name={icon} class="h-12 w-auto" />
  <SectionTitle class="text-3xl md:text-4xl">
    {title}
  </SectionTitle>
  <p class="text-lg font-light">
    {description}
  </p>
</article>
